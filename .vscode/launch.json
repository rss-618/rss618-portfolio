{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Dev Server",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "dev"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"serverReadyAction": {
				"pattern": "Local:\\s+(https?://\\S+)",
				"uriFormat": "%s",
				"action": "debugWithChrome"
			}
		},
		{
			"name": "Debug in Chrome",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:5173",
			"webRoot": "${workspaceFolder}/src"
		},
		{
			"name": "Preview Build",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "preview"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"preLaunchTask": "npm: build"
		}
	]
}
