{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Frontend: Dev Server",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "dev"],
			"cwd": "${workspaceFolder}/frontend",
			"console": "integratedTerminal"
		},
		{
			"name": "Frontend: Debug in Chrome",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:5173",
			"webRoot": "${workspaceFolder}/frontend/src"
		},
		{
			"name": "Frontend: Preview Build",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "preview"],
			"cwd": "${workspaceFolder}/frontend",
			"console": "integratedTerminal",
			"preLaunchTask": "Frontend: Build"
		},
		{
			"name": "Backend: Run Server",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "cargo",
			"runtimeArgs": ["run"],
			"cwd": "${workspaceFolder}/backend",
			"console": "integratedTerminal",
			"env": {
				"RUST_LOG": "backend=debug,tower_http=debug"
			}
		},
		{
			"name": "Full Stack: Dev",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "dev"],
			"cwd": "${workspaceFolder}/frontend",
			"console": "integratedTerminal",
			"preLaunchTask": "Backend: Run"
		}
	],
	"compounds": [
		{
			"name": "Full Stack (Parallel)",
			"configurations": ["Frontend: Dev Server", "Backend: Run Server"]
		}
	]
}
